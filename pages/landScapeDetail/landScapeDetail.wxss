.main {
  background: #f5f5f5;
  width: 100vw;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title-view {
  padding-top: 55rpx;
}

.title-triangle {
  margin-top: 35rpx;
  width: 0;
  height: 0;
  border-width: 13rpx 16rpx;
  border-style: solid;
  border-color: #535353 transparent transparent transparent;
}

.land-title {
  margin-top: 30rpx;
  font-size: 23rpx;
  color: rgba(43, 110, 147, 1);
  line-height: 23rpx;
}

.land-img {
  position: relative;
  padding: 40rpx 45rpx;
  width: 660rpx;
}

.swiperClass {
  margin: 0;
  height: 370rpx;
}

.slide-image {
  width: 659rpx;
  height: 370rpx;
}

.img-idx-tip {
  position: absolute;
  top: 0;
  right: 0;
  margin-top: 60rpx;
  margin-right: 80rpx;
  font-size: 32rpx;
  color: #000;
}

.img-tip {
  position: absolute;
  bottom: 0;
  left: 0;
  font-size: 22rpx;
  width: 100%;
  height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 64rpx;
  font-weight: 300;
  color: rgba(253, 253, 253, 1);
  opacity: 0.6;
}

.img-tip image {
  width: 46rpx;
  height: 30rpx;
}

.img-left-btn {
  position: absolute;
  left: 0;
  top: 0;
  margin: 173rpx 45rpx;
}

.img-right-btn {
  position: absolute;
  right: 0;
  top: 0;
  margin: 173rpx 45rpx;
}

.img-btn {
  height: 96rpx;
  width: 72rpx;
  background: #1b1b1b;
  opacity: 0.7;
  display: flex;
  justify-content: center;
  align-items: center;
}

.img-btn image {
  width: 10rpx;
  height: 16rpx;
}

.img-btn-left-img {
  transform: rotateZ(180deg);
}

.land-desc {
  padding: 0 40rpx;
  font-size: 29rpx;
  font-weight: 400;
  color: rgba(79, 86, 90, 1);
  /* text-indent: 2em; */
}

.text-hidden {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.readmore-view {
  margin-top: 25rpx;
  line-height: 29rpx;
  height: 29rpx;
  text-align: center;
  font-size: 29rpx;
  font-weight: 400;
  color: #80B0CA;
}

.make-btn-view {
  display: flex;
  justify-content: center;
  width: 100%;
  margin-top: 54rpx;
}

.make-btn {
  width: 301rpx;
  height: 75rpx;
  background: rgba(128, 176, 202, 1);
  border: 1rpx solid rgba(223, 223, 223, 0.28);
  box-shadow: 0rpx 2rpx 10rpx 0rpx rgba(79, 87, 91, 0.42);
  border-radius: 38rpx;
  font-size: 25rpx;
  font-weight: 400;
  color: rgba(254, 254, 254, 1);
  line-height: 75rpx;
  text-align: center;
}

.bottom-view {
  margin-top: 48rpx;
  background: #fff;
  padding: 30rpx 43rpx 50rpx;
  width: 664rpx;
  height: 300rpx;
}

.title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10rpx;
}

.title-left {
  font-size: 23rpx;
  font-weight: 400;
  color: rgba(79, 86, 90, 1);
  display: flex;
  align-items: center;
}

.bottom-triangle {
  width: 0;
  height: 0;
  border-width: 15rpx 9rpx;
  border-style: solid;
  border-color: #535353 transparent transparent transparent;
  margin: 15rpx 10rpx 0 0;
}

.title-right {
  font-size: 18rpx;
  font-weight: 400;
  color: rgba(84, 142, 174, 1);
}

.other-land {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-around;
}

.other-land-item {
  width: 208rpx;
  height: 242rpx;
  box-shadow: 0px 2px 9px 0px rgba(116, 122, 126, 0.36);
  border-radius: 20rpx;
}

.other-land-item-img {
  width: 207rpx;
  height: 193rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.other-land-item-name {
  font-size: 18rpx;
  font-weight: 400;
  color: rgba(79, 86, 90, 1);
  display: flex;
  justify-content: center;
  align-content: center;
}
