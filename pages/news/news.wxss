.main {
  background: #fff;
  padding: 25rpx;
}

.header {
  display: flex;
}

.header-item {
  padding: 14rpx 19rpx;
  background: #e4e5e6;
  border-radius: 6rpx;
  font-size: 20rpx;
  line-height: 20rpx;
  font-weight: normal;
  color: #666767;
  margin-left: 12rpx;
}

.header-item-active {
  background: #86acc1;
  color: #f8f9f9;
}

.body {
  margin-top: 45rpx;
}

.item {
  width: 701rpx;
  height: 395rpx;
  box-shadow: 5rpx 7rpx 24rpx 0rpx rgba(6, 0, 1, 0.49);
  border-top-left-radius: 6rpx;
  border-top-right-radius: 6rpx;
  position: relative;
  z-index: 2;
  margin-bottom: 30rpx;
}

.item-img {
  width: 700rpx;
  height: 395rpx;
  border-top-left-radius: 6rpx;
  border-top-right-radius: 6rpx;
  position: relative;
  z-index: 3;
}

.item-bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 701rpx;
  height: 94rpx;
  background: #0c2b3c;
  opacity: 0.5;
  z-index: 4;
}

.item-name {
  position: absolute;
  top: 316rpx;
  left: 30rpx;
  font-size: 28rpx;
  line-height:33rpx;
  font-weight: 400;
  color: #fff;
  z-index: 5;
  width: 640rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
