.view {
  position: fixed;
  height: 100vh;
  width: 100vw;
  overflow: hidden;
}

.view-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 750rpx;
  height: 100vh;
  z-index: 1;
}

.container {
  position: absolute;
  top: 107rpx;
  z-index: 3;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 750rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 400;
  color: #f4d365;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.title-triangle {
  width: 0;
  height: 0;
  border-width: 16rpx 17rpx;
  border-style: solid;
  border-color: #f4d365 transparent transparent transparent;
}

.main {
  margin-top: 70rpx;
  position: relative;
  width: 543rpx;
  height: 580rpx;
}

.main-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 543rpx;
  z-index: 1;
}

.main-view {
  z-index: 4;
  position: relative;
}

.main-title {
  font-size: 26rpx;
  color: #ebb46a;
  line-height: 26rpx;
  text-align: center;
  margin-top: 96rpx;
}

.main-content {
  margin-top: 43rpx;
  display: flex;
  justify-content: center;
}

.main-picker {
  position: relative;
  width: 164rpx;
  height: 300rpx;
  font-size: 30rpx;
  color: #e2c28d;
  text-align: center;
  display: flex;
  flex-direction: column;
}

.main-picker-bg {
  width: 195rpx;
  height: 329rpx;
  position: absolute;
  top: -18rpx;
  left: -14rpx;
}

.picker-right {
  margin-left: 58rpx;
}

.main-left-img {
  width: 213rpx;
  position: absolute;
  bottom: -66rpx;
  left: -56rpx;
  z-index: 6;
}

.picker-view {
  width: 90%;
  height: 90%;
  overflow: hidden;
  margin-left: 10rpx;
}

.picker-mask {
  opacity: 0;
}

.picker-class {
  height: 50rpx;
  border: none !important;
}

.picker-view-column {
  line-height: 50rpx !important;
  height: 50rpx !important;
  border: none !important;
}

.make-card-btn {
  width: 273rpx;
  height: 64rpx;
  background: rgba(244, 211, 101, 1);
  box-shadow: 0rpx 8rpx 18rpx 0rpx rgba(32, 21, 3, 0.65);
  border-radius: 31rpx;
  position: absolute;
  bottom: -136rpx;
  left: 50%;
  margin-left: -136rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.make-card-btn-text {
  font-size: 25rpx;
  line-height: 25rpx;
  color: #525252;
}

.slide {
  position: absolute;
  bottom: 0;
  right: 0;
  margin-right: -99rpx;
  margin-bottom: -126rpx;
  height: 220rpx;
  width: 99rpx;
  z-index: 9;
}

.slide-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 99rpx;
  height: 98rpx;
  position: relative;
  font-size: 18rpx;
  text-shadow: 2px -1px 35px rgba(69, 2, 0, 1);
  color: #face66;
}

.slide-item-content image {
  width: 38rpx;
}

.slide-item-content {
  position: relative;
  z-index: 10;
}

.slide-item-bg {
  position: absolute;
  z-index: 9;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  border-radius: 50%;
  width: 99rpx;
  height: 98rpx;
}

.slide2 {
  margin-top: 20rpx;
}

.key-view {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 99;
}

.key-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #000;
  opacity: 0.8;
  z-index: 100;
}

.key-main {
  width: 600rpx;
  height: 800rpx;
  color: #fff;
  z-index: 101;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}

.key-animation {
  width: 600rpx;
  height: 600rpx;
  color: #000;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.key-animation-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 600rpx;
  height: 600rpx;
  z-index: 101;
}

.key-content-big {
  font-size: 260rpx;
  line-height: 260rpx;
}

.key-content-small {
  font-size: 180rpx;
  line-height: 180rpx;
}

.key-content {
  color: #face66;
  z-index: 102;
}

.key-tip {
  font-size: 36rpx;
  margin-top: 30rpx;
}

.ani-rotateZ {
  animation: rotateZ 18s linear infinite;
}

@keyframes rotateZ {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}
