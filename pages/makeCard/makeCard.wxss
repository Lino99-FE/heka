.view {
  position: fixed;
  height: 100vh;
  width: 100vw;
  overflow: hidden;
}

.view-text {
  position: absolute;
  z-index: 9999;
  color: #fff;
  font-size: 12rpx;
}

.view-bg1 {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 750rpx;
  height: 100vh;
  z-index: 1;
}

.view-bg2 {
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 100vh;
  z-index: 1;
}

.container {
  position: relative;
  top: 108rpx;
  z-index: 3;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 750rpx;
}

.card-view {
  width: 520rpx;
  height: 750rpx;
  background: #9c3231;
  box-shadow: 0rpx 27rpx 70rpx 0rpx rgba(0, 0, 0, 0.54);
  border-radius: 20rpx;
  position: relative;
}

.preview-main {
  top: 160rpx;
}

.preview-view {
  transform: scale(1.3)
}

.preview-btn {
  margin-top: 160rpx!important;
}

.card-header {
  font-size: 17rpx;
  color: rgba(255, 255, 255, 1);
  display: flex;
  align-items: center;
  margin: 21rpx 0 0 55rpx;
}

.card-avatar {
  width: 62rpx;
  height: 62rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2rpx solid rgba(255, 249, 235, 1);
}

.card-nick {
  margin-left: 20rpx;
  max-width: 87rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space:nowrap;
}

.card-key {
  width: 520rpx;
  height: 137rpx;
  position: relative;
}

.card-key-img-bg {
  width: 156rpx;
  height: 143rpx;
  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -84rpx;
  z-index: 9;
}

.card-key-view-bg {
  position: absolute;
  width: 84rpx;
  height: 84rpx;
  top: 10rpx;
  left: 50%;
  margin-left: -42rpx;
  font-size: 55rpx;
  color: rgba(250, 217, 136, 1);
  z-index: 11;
  text-align: center;
}

.card-key-view-key {
  margin-top: 20rpx;
  line-height: 55rpx;
}

.card-key-view-tip {
  margin-top: 10rpx;
  font-size: 12rpx;
  line-height: 12rpx;
  color: rgba(250, 217, 136, 1);
}

.card-blessing {
  margin: 30rpx 30rpx 0;
  text-align: center;
  font-size: 17rpx;
  color: #ffe8b1;
}

.card-landscape {
  display: flex;
  justify-content: center;
  margin-top: 25rpx;
}

.card-landscape-img {
  width: 491rpx;
  height: 276rpx;
}

.card-introduction {
  display: flex;
  margin-top: 38rpx;
  padding: 0 14rpx;
}

.card-introduction-desc {
  width: 330rpx;
  font-size: 14rpx;
  color: rgba(247, 219, 150, 1);
}

.title {
  width: 330rpx;
  font-size: 22rpx;
  line-height: 22rpx;
  margin-bottom: 10rpx;
}

.card-introduction-code {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.code-img {
  width: 96rpx;
  height: 96rpx;
}

.code-tip {
  font-size: 12rpx;
  line-height: 12rpx;
  margin-top: 8rpx;
  color: rgba(250, 217, 136, 1);
}

.make-card-item1 {
  display: flex;
  margin-top: 107rpx;
}

.bottom-btn {
  width: 226rpx;
  height: 63rpx;
  background: rgba(244, 211, 101, 1);
  box-shadow: 0rpx 8rpx 18rpx 0rpx rgba(32, 21, 3, 0.65);
  border-radius: 31rpx;
  text-align: center;
  line-height: 63rpx;
  font-size: 25rpx;
  color: rgba(82, 82, 82, 1);
}

.make-card-item2 {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.make-btn {
  width: 273rpx;
  margin-top: 50rpx;
}

.share-view {
  font-size: 32rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.share-view-tip {
  line-height: 32rpx;
  margin-top: 40rpx;
}

.share-view-btn {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  width: 450rpx;
  padding: 0 35rpx;
}

.share-view-item {
  width: 110rpx;
  text-align: center;
  position: relative;
}

.share-view-text {
  font-size: 27rpx;
  line-height: 27rpx;
  margin-top: 20rpx;
}

.share-view-icon {
  width: 97rpx;
  height: 97rpx;
}

.share-btn {
  position: absolute;
  width: 110rpx;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: transparent;
}

.share-btn::after {
  border: none;
}

.bless-mark {
  position: fixed;
  background: #000;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity:0.45;
  z-index: 18;
}

.bless {
  top: 170rpx;
  left: 77rpx;
  position: absolute;
  width: 596rpx;
  height: 819rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 2rpx 73rpx 0rpx rgba(60, 78, 87, 0.17);
  border-radius: 13rpx;
  z-index: 19;
}

.bless-top {
  width: 596rpx;
  height: 85rpx;
  background: rgba(147, 52, 53, 1);
  border-top-left-radius: 13rpx;
  border-top-right-radius: 13rpx;
  font-size: 25rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.bless-top text {
  margin-left: 40rpx;
}

.bless-top image {
  width: 45rpx;
  height: 45rpx;
  margin-right: 17rpx;
}

.bless-content {
  height: 580rpx;
}

.bless-content-item {
  height: 108rpx;
  margin: 0 26rpx;
  border-bottom: 1rpx dashed rgba(153, 153, 153, 1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-text {
  font-size: 21rpx;
  font-weight: 400;
  color: rgba(82, 82, 82, 1);
  line-height: 31rpx;
  width: 420rpx;
}

.item-img {
  width: 39rpx;
  height: 39rpx;
}

.bless-bottom {
  width: 596rpx;
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
