page {
  font-family: "artfont";
}

button {
  padding: 0;
}

.btn-border::after {
  border: none;
}

.art-banner {
  position: relative;
  border: 1rpx solid rgba(98, 98, 98, 1);
  border-radius: 10rpx;
  display: flex;
  padding: 4rpx 6rpx;
}

.border-out-line {
  position: absolute;
  left: 15%;
  width: 70%;
  background: #f5f5f5;
  height: 1px;
}

.border-out-top {
  top: -1rpx;
}

.border-out-bottom {
  bottom: -1rpx;
}

.art-banner-in {
  position: relative;
  border: 1rpx solid rgba(98, 98, 98, 1);
  border-radius: 10rpx;
  height: 61rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  font-weight: 400;
  color: rgba(79, 86, 90, 1);
}

.border-in-line {
  height: 60%;
  width: 1px;
  position: absolute;
  top: 20%;
  background: #f5f5f5;
}

.border-in-left {
  left: -1rpx;
}

.border-in-right {
  right: -1rpx;
}